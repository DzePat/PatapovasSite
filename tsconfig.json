{
    "compilerOptions": {
      "target": "es5",                              
      "lib": ["dom", "esnext"],                     
      "allowJs": true,                              
      "jsx": "react-jsx",
      "module": "esnext",                          
      "moduleResolution": "node",
      "strict": true,                   
      "esModuleInterop": true,                                            
      "forceConsistentCasingInFileNames": true      
    },
    "include": [
      "src/**/*"                                    
    ],
    "exclude": [
      "node_modules"                                
    ]
}
  